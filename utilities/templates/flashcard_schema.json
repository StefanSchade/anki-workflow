{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flashcard Schema",
  "description": "Schema for validating flashcard JSON files for multiple card types.",
  "type": "object",
  "properties": {
    "cards": {
      "type": "array",
      "description": "Array of flashcards.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "description": "Unique identifier for the card." },
          "type": {
            "type": "string",
            "enum": ["basic", "typing", "multiple-choice"],
            "description": "Type of flashcard."
          },
          "question": { "type": "string", "description": "Question or prompt for the card." },
          "answer": { "type": "string", "description": "Answer for basic and typing card types." },
          "choices": {
            "type": "array",
            "description": "Array of choices for multiple-choice cards.",
            "items": {
              "type": "object",
              "properties": {
                "text": { "type": "string", "description": "Choice text." },
                "correct": { "type": "boolean", "description": "Indicates if the choice is correct." },
                "explanation": { "type": "string", "description": "Explanation for the choice." }
              },
              "required": ["text", "correct"]
            }
          },
          "tags": {
            "type": "array",
            "description": "Tags categorizing the card.",
            "items": { "type": "string" }
          }
        },
        "required": ["id", "type", "question"]
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags applicable to all cards in this file.",
      "items": { "type": "string" }
    }
  },
  "required": ["cards"]
}

